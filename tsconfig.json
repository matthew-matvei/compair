{
    "compilerOptions": {
        "baseUrl": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "noImplicitThis": true,
        "downlevelIteration": true,
        "jsx": "react",
        "module": "es2015",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "removeComments": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": [
        "src",
        "test"
    ]
}
